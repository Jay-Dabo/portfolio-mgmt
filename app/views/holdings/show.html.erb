<%- model_class = Holding -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:portfolio_id) %>:</strong></dt>
  <dd><%= @holding.portfolio_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stock_id) %>:</strong></dt>
  <dd><%= @holding.stock_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @holding.quantity %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              holdings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_holding_path(@holding), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              holding_path(@holding),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
